/* Overrides e estilos extra extraídos de index.html */

/* Force navbar + links */
nav#navbar, .navbar, .navbar.fixed-top, .navbar.navbar-expand-lg {
  background-color: #ffffff !important;
  color: #111 !important;
  box-shadow: none !important;
  border-bottom: 1px solid rgba(0,0,0,0.06) !important;
  backdrop-filter: none !important;
  -webkit-backdrop-filter: none !important;
}
.navbar .nav-link { color: #111 !important; }
.navbar .nav-link:hover, .navbar .nav-link:focus { color: #0b193e !important; background: transparent !important; }

/* Brand logo */
.navbar-brand img.brand-logo {
  height: 60px;
  transition: transform 0.4s ease;
}

/* Force header appearance */
.page-header { 
  width:100% !important;
  padding:30px 0 !important;
  text-align:center !important;
  background: linear-gradient(135deg, #0b193e 0%, #427aa1 100%) !important;
  color: #fff !important;
}
.page-header h1, .page-header .display-4 { color: #fff !important; }

/* PAGE HEADER - Full width without container constraints */
.page-header {
  background: linear-gradient(135deg, #0b193e 0%, #427aa1 100%) !important;
  color: white !important;
  padding: 100px 0 !important;
  text-align: center !important;
  width: 100vw !important;
  position: relative !important;
  left: calc(-50vw + 50%) !important;
  margin: 0 !important;
}

.page-header .container {
  max-width: 100% !important;
  width: 100vw !important;
  padding: 0 20px !important;
  margin: 0 auto !important;
}

.page-header h1, .page-header .display-4 {
  color: #ffffff !important;
  font-size: 2.2rem !important;
  margin: 0 !important;
}

.page-header p {
  color: rgba(255, 255, 255, 0.8) !important;
  margin: 0.5rem 0 !important;
}

/* Footer - Full width background with centered content */
footer, footer#contato, .site-footer { 
  background: linear-gradient(135deg, #0b193e 0%, #274a66 100%) !important; 
  color: #fff !important; 
  width: 100vw !important;
  position: relative !important;
  left: calc(-50vw + 50%) !important;
  margin: 0 !important;
  padding: 48px 0 28px !important;
  box-shadow: none !important;
}
footer .container, footer#contato .container { 
  max-width: 1200px !important; 
  margin: 0 auto !important; 
  padding: 0 15px !important;
  width: 100% !important;
}
footer h3, footer h5, footer .footer-brand { 
  color: #ffffff !important; 
}
footer a, footer p { 
  color: rgba(255,255,255,0.95) !important; 
}
footer i { 
  color: rgba(255,255,255,0.95) !important; 
}

/* Footer social wrapper */
.footer-social {
  display: flex;
  justify-content: center;
  gap: 15px;
  align-items: center;
  text-align: center;
  margin-top: 15px;
}

/* Partner logos */
.section-padding img, .partners-section img, .partner-logo { filter: none !important; -webkit-filter: none !important; opacity:1 !important; }

/* Quem somos image */
.quem-somos-img {
  max-width: 280px;
  width: 100%;
}

/* Destaque image */
.destaque-img {
  max-width: 90%;
  max-height: 350px;
  object-fit: contain;
}

/* small utility to keep footer buttons & small elements */
.btn-sm { font-size: 0.85rem; }

